# Use as template for your .env file, replace with your values
# Database
# Note: For new environments, use postulo_dev or postulo_prod naming
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/postulo_dev

# JWT Secrets (change in production)
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production

# AI Services (using Vercel AI SDK with OpenAI)
OPENAI_API_KEY=your-openai-api-key

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
# Note: For new environments, use postulo-documents naming
S3_BUCKET_NAME=postulo-documents
AWS_REGION=us-east-1

# WebSocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:3000
